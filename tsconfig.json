{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES5", "ES2015", "ES2017"],
    "declaration": true,
    "removeComments": false,
    "stripInternal": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist/",
    "rootDir": "."
  },
  "include": ["./src/**/*", "./test/**/*", "./example/**/*"],
  "exclude": ["./*.js"]
}
